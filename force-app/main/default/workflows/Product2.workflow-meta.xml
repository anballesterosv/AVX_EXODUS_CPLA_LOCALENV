        </actions>
        <actions>
            <name>Convert_ProductWeightQuantity_Gs_OZs</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>When Product records are CREATED or UPDATED, automatically convert the Product Weight Quantity and Product Weight Unit of Measure from METRIC to IMPERIAL if values are blank.</description>
        <formula>AND(     ISBLANK( ProductWeightQuantityImperial__c ),     ISBLANK(TEXT(ProductWeightUnitOfMeasureImperial__c)),     NOT(ISBLANK(ProductWeightQuantityMetric__c)),     ISPICKVAL(ProductWeightUnitOfMeasureMetric__c, &quot;Gram (g)&quot;)    ) || AND(     ISBLANK( PackWeightQuantityImperial__c),     ISBLANK(TEXT(PackWeightUnitOfMeasureImperial__c)),     NOT(ISBLANK(PackWeightQuantityMetric__c)),     ISPICKVAL(PackWeightUnitOfMeasureMetric__c, &quot;Gram (g)&quot;)    )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
