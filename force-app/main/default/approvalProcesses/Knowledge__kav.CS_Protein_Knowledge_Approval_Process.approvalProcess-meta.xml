<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CS_Article_Number__c</field>
        <field>Title</field>
        <field>Summary</field>
        <field>CS_Description__c</field>
        <field>CS_Category__c</field>
        <field>CS_Market_Channel__c</field>
        <field>CreatedBy</field>
        <field>CreatedDate</field>
        <field>LastModifiedBy</field>
        <field>LastModifiedDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>sharon_quigley@cargill.com.prod</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CS_Market_Channel__c</field>
                <operation>equals</operation>
                <value>General</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval for Knowledge Article-General Market Channel</label>
        <name>Approval_for_Knowledge_Article_General_Market_Channel</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CS_Protein_FS_Knowledge_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1</booleanFilter>
            <criteriaItems>
                <field>Knowledge__kav.CS_Market_Channel__c</field>
                <operation>equals</operation>
                <value>Food Service</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval for Knowledge Article-Food Service Market Channel</label>
        <name>Approval_for_Knowledge_Article_Food_Service_Market_Channel</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CS_Protein_PI_Knowledge_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CS_Market_Channel__c</field>
                <operation>equals</operation>
                <value>Protein Ingredients</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval for Knowledge Article-PI Market Channel</label>
        <name>Approval_for_Knowledge_Article_PI_Market_Channel</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CS_Protein_Retail_Knowledge_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CS_Market_Channel__c</field>
                <operation>equals</operation>
                <value>Retail</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval for Knowledge Article-Retail Market Channel</label>
        <name>Approval_for_Knowledge_Article_Retail_Market_Channel</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This Approval Process is to approve/reject the Knowledge Article created by Protein Customer Service Representative/Supervisor for Protein Customer Service.</description>
    <emailTemplate>CS_Protein_Service_Folder/CS_Protein_Knowledge_Article_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>Protein Customer Service Knowledge</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.PublishStatus</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.CS_Category__c</field>
            <operation>notEqual</operation>
            <value>Credit,Job Aid,Transportation Schedule</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CS_Protein_Knowledge_Approval_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Knowledge</name>
            <type>KnowledgePublish</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CS_Protein_Knowledge_Rejection_Notification</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>CS Protein Knowledge Approval Process</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
