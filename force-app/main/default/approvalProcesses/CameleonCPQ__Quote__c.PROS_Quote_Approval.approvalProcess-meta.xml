        <field>Pricing_End_Date__c</field>
        <field>Pricing_Type__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>SP_Approver_5__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>SP_Approver_4__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>SP_Approver_6__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>SP_Approver_1__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>SP_Approver_3__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>SP_Approver_2__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 5 AND 6) OR (1 AND 7 AND 9) OR (1 AND 8 AND 10) OR (2 AND 5 AND 6) OR 3 OR 4</booleanFilter>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.Approval_Zone__c</field>
                <operation>equals</operation>
                <value>RED</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.DealSize__c</field>
                <operation>equals</operation>
                <value>Full</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.Opportunity_Type__c</field>
                <operation>equals</operation>
                <value>Turkey</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.Opportunity_Type__c</field>
                <operation>equals</operation>
                <value>Deli</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.Pricing_Type__c</field>
                <operation>notEqual</operation>
                <value>NOF</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.Pricing_Type__c</field>
                <operation>notEqual</operation>
                <value>PPP</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.Pricing_Type__c</field>
                <operation>equals</operation>
                <value>NOF</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.Pricing_Type__c</field>
                <operation>equals</operation>
                <value>PPP</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.DealSize__c</field>
                <operation>equals</operation>
                <value>Full,Direct,Light</value>
            </criteriaItems>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.DealSize__c</field>
                <operation>equals</operation>
                <value>Full</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>SP Approval</label>
        <name>SP_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ST_Approver_2__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>ST_Approver_1__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>ST_Approver_4__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>ST_Approver_3__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>ST_Approver_5__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>CameleonCPQ__Quote__c.DealSize__c</field>
                <operation>equals</operation>
                <value>Full</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>ST Approval</label>
        <name>ST_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>BM_Approver_5__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>BM_Approver_3__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>BM_Approver_6__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>BM_Approver_2__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>BM_Approver_1__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>BM_Approver_4__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(OR(ISPICKVAL(DealSize__c, &#39;Full&#39;), AND(ISPICKVAL(DealSize__c, &#39;Light&#39;), ISPICKVAL(Approval_Zone__c, &#39;RED&#39;)), OR( Opportunity_Type__c =&#39;TURKEY&#39;, Opportunity_Type__c =&#39;DELI&#39;)), NOT(OR (ISPICKVAL( Pricing_Type__c ,&#39;NOF&#39;), ISPICKVAL(Pricing_Type__c ,&#39;PPP&#39;))) )</formula>
        </entryCriteria>
        <label>BM Approval</label>
        <name>BM_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/Quote_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 5 )  OR 2 OR 3 OR 4</booleanFilter>
        <criteriaItems>
            <field>CameleonCPQ__Quote__c.Approval_Zone__c</field>
            <operation>equals</operation>
