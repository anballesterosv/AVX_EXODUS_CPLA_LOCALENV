            <value>DELI</value>
        </criteriaItems>
        <criteriaItems>
            <field>CameleonCPQ__Quote__c.Pricing_Type__c</field>
            <operation>notEqual</operation>
            <value>PPP</value>
        </criteriaItems>
    </entryCriteria>
