<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Project Initial Review</label>
        <name>Project_Initial_Review</name>
    </approvalStep>
    <emailTemplate>Cargill_Protein_Email_Templates/Project_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Project__c.RecordType</field>
            <operation>equals</operation>
            <value>Project (Draft)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project__c.Stage__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Copy_Estimated_Margin_to_Actual</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Copy_Estimated_Volume_to_Actual</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Project_Phase</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_isApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Record_Type_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Stage_To_Go</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Phase_to_Explore</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Stage_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Stage_To_SubmittedForApproal</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Project Approval</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
